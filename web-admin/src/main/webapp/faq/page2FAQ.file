<%@ page contentType="text/html;charset=UTF-8"%>
<div style="display: inline-block;">
 <%if (rowsPerPage<rowNumber) {%>
    <%if(pageIndex>=rowsPerPage){%>
        <A href="faqservlet?action=selectFAQ&whichPage=1"><button>至第一頁</button></A>&nbsp;
        <A href="faqservlet?action=selectFAQ&whichPage=<%=whichPage-1%>"><button>上一頁</button></A>&nbsp;
    <%}%>
  
    <%if(pageIndex<pageIndexArray[pageNumber-1]){%>
        <A href="faqservlet?action=selectFAQ&whichPage=<%=whichPage+1%>"><button>下一頁</button></A>&nbsp;
        <A href="faqservlet?action=selectFAQ&whichPage=<%=pageNumber%>"><button>至最後一頁</button></A>&nbsp;
    <%}%>
  <%}%>  
</div>
<div style="display: inline-block;">
  <%if (pageNumber>1) {%>
    <FORM METHOD="post" ACTION="faqservlet?action=selectFAQ">   
       <select size="1" name="whichPage">
         <%for (int i=1; i<=pageNumber; i++){%>
            <option value="<%=i%>">跳至第<%=i%>頁
         <%}%> 
       </select>&nbsp;
       <input type="submit" value="確定" >  
    </FORM>
  <%}%>
 </div>